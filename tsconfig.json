{
  "compilerOptions": {
    // ES Module support
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    // Output
    "outDir": "dist/esm",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Type checking
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    // Interop
    "esModuleInterop": true,
    "resolveJsonModule": false,

    // Path mapping
    "baseUrl": ".",
    "paths": {
      "#test-helpers": ["./tests/vitest-tap"]
    },

    // Types
    "types": ["vitest/globals", "node"],

    // Libraries
    "lib": ["ESNext"]
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/",
    "examples/"
  ],
  "include": [
    "bin/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.test.ts",
    "tests/machine-behaviors/**/*.ts",
    "types/**/*.d.ts"
  ]
}
